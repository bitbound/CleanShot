<Window x:Class="CleanShot.Windows.CaptureRecordingFrame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CleanShot.Windows"
        mc:Ignorable="d"
        Title="CaptureRecordingFrame" Height="300" Width="300" WindowStyle="None" AllowsTransparency="True" Background="Transparent" Loaded="Window_Loaded" Topmost="True">
    <Grid>
        <Border x:Name="topLeftFrame" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="25" BorderThickness="2,2,0,0" BorderBrush="Lime"></Border>
        <Border x:Name="topRightFrame" HorizontalAlignment="Right" VerticalAlignment="Top" Height="25" Width="25" BorderThickness="0,2,2,0" BorderBrush="Lime"></Border>
        <Border x:Name="bottomRightFrame" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="25" Width="25" BorderThickness="0,0,2,2" BorderBrush="Lime"></Border>
        <Border x:Name="bottomLeftFrame" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="25" Width="25" BorderThickness="2,0,0,2" BorderBrush="Lime"></Border>
        <TextBlock x:Name="countdownText" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray" FontSize="64" FontWeight="Bold">3</TextBlock>
    </Grid>
</Window>
